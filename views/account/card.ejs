<!doctype html>
<html lang="">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="VoiceIn, Vcard App, contact book.">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>您的名片</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dialog-polyfill/0.4.3/dialog-polyfill.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.indigo-pink.min.css">

    <style media="screen">
      /* login.css */
      html, body {
        background: #eee;
      }

      .user-header {
        background: url('/dist/public/images/qrcode/blurred-web-backgrounds.jpg') center / cover;
        padding: 50px;
        text-align: center;
        position: relative;
      }

      .user-image {
        width: 100px;
        border-radius: 50px;
        -o-border-radius: 50px;
        -webkit-border-radius: 50px;
        -moz-border-radius: 50px;
      }

      .demo-cards {
        align-items: flex-start;
        align-content: flex-start;
      }

      .demo-cards .demo-separator {
        height: 32px;
      }

      .demo-cards .mdl-card__title.mdl-card__title {
        color: white;
        font-size: 24px;
        font-weight: 400;
      }

      .demo-cards ul {
        padding: 0;
      }

      .demo-cards h3 {
        font-size: 1em;
      }

      .demo-updates .mdl-card__title {
        min-height: 200px;
        background-position: 90% 100%;
        background-repeat: no-repeat;
      }

      .demo-cards .mdl-card__actions a {
        color: #00BCD4;
        text-decoration: none;
      }

      .card-title-section {
        position: relative;
      }

      #qrcode {
          position: absolute;
          bottom: 5px;
          right: 15px;
      }

      .download-btn {
        position: absolute;
        left: 10px;
        z-index: 10;
      }

    </style>
  </head>
  <body>
    <div class="demo-layout mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header">

      <%- include dashboard.partial.ejs %>

      <main class="mdl-layout__content mdl-color--grey-100">
        <div class="mdl-grid demo-content">
          <div class="mdl-card mdl-cell mdl-cell--6-col" id="user-container">
            <div class="mdl-card__media mdl-color-text--grey-50 user-header">
              <% if (image !== '') { %>
                <img class="user-image" src="<%= image %>" alt="" />
              <% } else {%>
                <img class="user-image" src="/dist/public/images/general/user.ico" alt="" />
              <% } %>
              <div id="qrcode"></div>
            </div>
            <div class="mdl-color-text--grey-600 mdl-card__supporting-text user-information-section">
              <ul class="mdl-list">
                <li class="mdl-list__item">
                  <span class="mdl-list__item-primary-content">
                  姓名:
                  <%= user.userName %>
              </span>
                </li>
                <li class="mdl-list__item">
                  <span class="mdl-list__item-primary-content">
                  職稱:
                  <%= user.jobTitle %>
                </span>
                </li>
                <li class="mdl-list__item">
                  <span class="mdl-list__item-primary-content">
                  公司:
                  <%= user.company %>
                </span>
                </li>
                <li class="mdl-list__item">
                  <span class="mdl-list__item-primary-content">
                  地點:
                  <%= user.location %>
                </span>
                </li>
                <li class="mdl-list__item">
                  <span class="mdl-list__item-primary-content">
                  信箱:
                  <%= user.email %>
                </span>
                </li>
                <li class="mdl-list__item">
                  <span class="mdl-list__item-primary-content">
                  關於:<br/><br/>
                  <%= user.profile %>
                </span>
                </li>
              </ul>
            </div>
          </div>
          <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored download-btn">
            下載您的名片圖檔
          </button>
        </div>
      </main>
    </div> <!-- end of div of dashboard-->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js" charset="utf-8"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js" charset="utf-8"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.3.2/backbone-min.js" charset="utf-8"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fetch/0.11.0/fetch.min.js"></script>
    <script src="https://storage.googleapis.com/code.getmdl.io/1.0.6/material.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dialog-polyfill/0.4.3/dialog-polyfill.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js" charset="utf-8"></script>
    <script src="/public/javascripts/card/qrcode.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/2014-11-29/FileSaver.min.js" charset="utf-8"></script>
    <script src="/public/javascripts/card/dom-to-image.js"></script>
    <script src="/dist/public/javascripts/card/entry.bundle.js"></script>
    <script type="text/javascript">
      $(function () {
        var host = 'https://voicein.kits.tw';

        if (location.host === 'voicein.kits.tw') {
          host = 'https://voice-in.herokuapp.com';
        }

        $('#qrcode').qrcode(
          {
            render: 'canvas',
            size: 125,
            color: '#3a3',
            background: '#eeeeee',
            text: host + '/qrcode?id=<%= user.qrCodeUuid %>',
            ecLevel: 'L',
          });
      });
    </script>
  </body>
</html>
