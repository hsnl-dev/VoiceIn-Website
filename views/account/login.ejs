<!doctype html>
<html lang="">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="VoiceIn, Vcard App, contact book.">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VoiceIn 登入</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dialog-polyfill/0.4.3/dialog-polyfill.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.indigo-pink.min.css">
    <style media="screen">
      /* login.css */
      html, body {
        background: #eee;
      }

      .login-container .login-section {
        max-width: 450px;
        padding: 0;
        padding-top: 100px;
        display: flex;
        width: 100%;
        margin: 0 auto;
        flex-shrink: 0;
      }

    </style>
  </head>
  <body>
    <div class="login-container mdl-layout mdl-js-layout">
      <main class="mdl-layout__content">
        <div class="login-section mdl-grid">
          <div class="mdl-card on-the-road-again mdl-cell mdl-cell--12-col">
            <div class="mdl-card__media mdl-color-text--grey-50">

            </div>
            <div class="mdl-color-text--grey-600 mdl-card__supporting-text">
              <!-- Textfield with Floating Label -->
              <h5>登入 VoiceIn 服務</h5>
              <% if (message) {%>
                <span style="color: red;"><%= message %></span>
              <% } %>
              <form class="login-form" action="/account/loginRequest" method="POST">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <input name="username" class="mdl-textfield__input" type="text" pattern="[0-9]{10}" id="phone-number-input">
                  <label class="mdl-textfield__label" for="phone-number-input">請輸入手機號碼...</label>
                  <span class="mdl-textfield__error">請輸入正確格式之手機號碼</span>
                </div>
                <div>
                  <h5>登入碼接收方式</h5>
                  <label class="mdl-radio mdl-js-radio mdl-js-ripple-effect" for="option-1">
                    <input type="radio" id="option-1" class="mdl-radio__button" name="push-opt" value="app" checked>
                    <span class="mdl-radio__label">使用 App 推送通知</span>
                  </label>
                  <label class="mdl-radio mdl-js-radio mdl-js-ripple-effect" for="option-2">
                    <input type="radio" id="option-2" class="mdl-radio__button" name="push-opt" value="sms">
                    <span class="mdl-radio__label">使用手機簡訊</span>
                  </label>
                </div>
                <br/>
                <!-- Accent-colored raised button -->
                <span class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent send-code-btn" data-send="發送中..." data-normal="發送登入碼">
                  發送登入碼
                </span>
                <br><br>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                  <input name="password" class="mdl-textfield__input" type="text" pattern="[0-9]{6}" id="validation-code">
                  <label class="mdl-textfield__label" for="validation-code">請輸入登入碼...</label>
                  <span class="mdl-textfield__error">登入碼為六位數</span>
                </div>
                <br/>
                <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--primary login-btn" disabled="true">
                  登入
                </button>
              </form>
            </div>
          </div>
        </div>
      </main>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js" charset="utf-8"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js" charset="utf-8"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.3.2/backbone-min.js" charset="utf-8"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fetch/0.11.0/fetch.min.js"></script>
    <script src="https://storage.googleapis.com/code.getmdl.io/1.0.6/material.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dialog-polyfill/0.4.3/dialog-polyfill.min.js"></script>
    <script src="/dist/public/javascripts/login/entry.bundle.js"></script>
  </body>
</html>
